  "description": "Make travel and accommodation easy and convenient.",
  "main": "index.js",
  "scripts": {
    "start": "nodemon --exec babel-node src/index.js",
    "test": "NODE_ENV=test npm run dropTables && NODE_ENV=test node_modules/.bin/sequelize db:seed:all && NODE_ENV=test mocha --require @babel/polyfill --require @babel/register ./src/tests/main.test.js --timeout 10000 --recursive --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "createTables": "npm run dropTables && sequelize db:seed:all",
    "dropTables": "sequelize db:migrate:undo:all && sequelize db:migrate"
  },
