{
  "name": "barefoot-nomad",
  "version": "1.0.0",
  "description": "Make travel and accomodation easy and convenient.",
  "main": "index.js",
  "scripts": {
    "start": "nodemon --exec babel-node src/index.js",
    "test": "NODE_ENV=test && npm run createTables && mocha --require @babel/polyfill --require @babel/register src/**/**test.js",
    "coverage": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "createTables": "npm run dropTables && node_modules/.bin/sequelize db:migrate && node_modules/.bin/sequelize db:seed:all",
    "dropTables": "node_modules/.bin/sequelize db:migrate:undo:all"
  },
  "author": "Andela code-knights",
  "license": "MIT",
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/polyfill": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/register": "^7.8.3",
    "bcrypt": "^3.0.8",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "pg": "^7.18.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.21.3",
    "sequelize-cli": "^5.5.1",
    "swagger-jsdoc": "^3.5.0",
    "swagger-ui-express": "^4.1.3"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.9",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "mocha": "^7.0.1",
    "mocha-lcov-reporter": "^1.3.0",
    "prettier": "^1.19.1"
  }
}
